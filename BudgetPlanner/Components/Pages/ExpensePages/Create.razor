@page "/expenses/create"
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner.Domain
@inject IDbContextFactory<BudgetPlanner.Data.BudgetPlannerContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Expense</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Expense" OnValidSubmit="AddExpense" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="expenseid" class="form-label">ExpenseId:</label> 
                <InputText id="expenseid" @bind-Value="Expense.ExpenseId" class="form-control" /> 
                <ValidationMessage For="() => Expense.ExpenseId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="amount" class="form-label">Amount:</label> 
                <InputNumber id="amount" @bind-Value="Expense.Amount" class="form-control" /> 
                <ValidationMessage For="() => Expense.Amount" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateincurred" class="form-label">DateIncurred:</label> 
                <InputDate id="dateincurred" @bind-Value="Expense.DateIncurred" class="form-control" /> 
                <ValidationMessage For="() => Expense.DateIncurred" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label> 
                <InputText id="description" @bind-Value="Expense.Description" class="form-control" /> 
                <ValidationMessage For="() => Expense.Description" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Expense.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Expense.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="Expense.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => Expense.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Expense.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Expense.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Expense.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Expense.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/expenses">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Expense Expense { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddExpense()
    {
        using var context = DbFactory.CreateDbContext();
        context.Expense.Add(Expense);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/expenses");
    }
}
