@page "/goals/delete"
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner.Domain
@inject IDbContextFactory<BudgetPlanner.Data.BudgetPlannerContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Goals</h2>
    <hr />
    @if (goals is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BudgetId</dt>
            <dd class="col-sm-10">@goals.BudgetId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateStart</dt>
            <dd class="col-sm-10">@goals.DateStart</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateEnd</dt>
            <dd class="col-sm-10">@goals.DateEnd</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@goals.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@goals.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@goals.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@goals.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="goals" OnValidSubmit="DeleteGoals" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(goals is null)">Delete</button> |
            <a href="/goals">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Goals? goals;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        goals = await context.Goals.FirstOrDefaultAsync(m => m.Id == Id);

        if (goals is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteGoals()
    {
        using var context = DbFactory.CreateDbContext();
        context.Goals.Remove(goals!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/goals");
    }
}
