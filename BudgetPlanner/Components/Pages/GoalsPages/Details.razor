@page "/goals/details"
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner.Domain
@inject IDbContextFactory<BudgetPlanner.Data.BudgetPlannerContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Goals</h2>
    <hr />
    @if (goals is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BudgetId</dt>
            <dd class="col-sm-10">@goals.BudgetId</dd>
            <dt class="col-sm-2">DateStart</dt>
            <dd class="col-sm-10">@goals.DateStart</dd>
            <dt class="col-sm-2">DateEnd</dt>
            <dd class="col-sm-10">@goals.DateEnd</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@goals.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@goals.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@goals.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@goals.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/goals/edit?id={goals.Id}")">Edit</a> |
            <a href="@($"/goals")">Back to List</a>
        </div>
    }
</div>

@code {
    private Goals? goals;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        goals = await context.Goals.FirstOrDefaultAsync(m => m.Id == Id);

        if (goals is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
