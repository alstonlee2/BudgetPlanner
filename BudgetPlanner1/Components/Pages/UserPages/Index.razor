@page "/users"
@using Microsoft.AspNetCore.Identity
@using BudgetPlanner1.Data
@inject UserManager<BudgetPlanner1User> UserManager
@inject NavigationManager NavigationManager

<PageTitle>Users</PageTitle>

<h1>Users</h1>

<p>
    <a href="/users/create" class="btn btn-primary">Create New</a>
</p>

@if (users is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@($"/users/edit?id={user.Id}")">Edit</a> |
                        <a href="@($"/users/details?id={user.Id}")">Details</a> |
                        <a href="@($"/users/delete?id={user.Id}")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BudgetPlanner1User>? users;

    protected override async Task OnInitializedAsync()
    {
        users = UserManager.Users.ToList(); // Load all users
    }
}
