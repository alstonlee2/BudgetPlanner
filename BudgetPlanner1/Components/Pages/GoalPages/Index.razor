@page "/goals"
@attribute [Authorize]
@using BudgetPlanner1.Data
@using BudgetPlanner1.Domain
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>My Financial Goals</PageTitle>

<div class="container mt-4">
    <h1 class="text-center mb-4">My Financial Goals</h1>

    <div class="text-end mb-3">
        <a href="/goals/create" class="btn btn-success">+ Create New Goal</a>
    </div>

    @if (goals == null)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading your goals...</p>
        </div>
    }
    else if (!goals.Any())
    {
        <div class="alert alert-info text-center py-4">
            You don't have any financial goals yet.<br />
            Click "+ Create New Goal" to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Goal Name</th>
                        <th>Target Amount</th>
                        <th>Deadline</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in goals)
                    {
                        <tr>
                            <td>@goal.Name</td>
                            <td>@goal.TargetAmount.ToString("C0")</td>
                            <td>@goal.TargetDate.ToShortDateString()</td>
                            <td>@goal.DateCreated.ToShortDateString()</td>
                            <td>
                                <a href="@($"/goals/edit?id={goal.Id}")"
                                   class="btn btn-sm btn-primary me-1">Edit</a>
                                <a href="@($"/goals/details?id={goal.Id}")"
                                   class="btn btn-sm btn-info me-1">Details</a>
                                <a href="@($"/goals/delete?id={goal.Id}")"
                                   class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Goal>? goals;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                goals = new();
                return;
            }

            using var db = DbFactory.CreateDbContext();

            goals = await db.Goals
                .Where(g => g.UserId == userId)
                .OrderByDescending(g => g.DateCreated)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Goals load error: {ex.Message}");
            goals = new();
        }
        finally
        {
            isLoading = false;
        }
    }
}