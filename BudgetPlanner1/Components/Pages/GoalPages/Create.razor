@page "/goals/create"
@rendermode InteractiveServer
@attribute [Authorize]
@using BudgetPlanner1.Data
@using Microsoft.AspNetCore.Components.Authorization
@using BudgetPlanner1.Domain
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Create Goal</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h3 class="text-center mb-4">Create New Goal</h3>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="goal" OnValidSubmit="AddGoal">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger mb-3" />

                <div class="mb-3">
                    <label class="form-label">Goal Name *</label>
                    <InputText @bind-Value="goal.Name" class="form-control" />
                    <ValidationMessage For="() => goal.Name" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea @bind-Value="goal.Description" class="form-control" rows="3" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Target Amount *</label>
                    <InputNumber @bind-Value="goal.TargetAmount" class="form-control" />
                    <ValidationMessage For="() => goal.TargetAmount" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Target Date *</label>
                    <InputDate @bind-Value="goal.TargetDate" class="form-control" />
                    <ValidationMessage For="() => goal.TargetDate" />
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary px-5" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Create
                    </button>
                    <a href="/goals" class="btn btn-outline-secondary px-5">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Goal goal = new Goal
    {
        Name = "",
        TargetAmount = 0M,
        TargetDate = DateTime.UtcNow
    };
    private string? errorMessage;
    private bool isSaving = false;

    private async Task AddGoal()
    {
        errorMessage = null;
        isSaving = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

            if (string.IsNullOrEmpty(userId))
            {
                errorMessage = "User not authenticated.";
                return;
            }

            var now = DateTime.UtcNow;
            var userName = authState.User.Identity?.Name ?? "Unknown";

            goal.UserId = userId;
            goal.DateCreated = now;
            goal.DateUpdated = now;
            goal.CreatedBy = userName;
            goal.UpdatedBy = userName;

            using var context = DbFactory.CreateDbContext();
            context.Goals.Add(goal);
            await context.SaveChangesAsync();

            // Force reload to ensure fresh data
            NavigationManager.NavigateTo("/goals", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            if (ex.InnerException != null)
                errorMessage += $" | {ex.InnerException.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isSaving = false;
        }
    }
}
