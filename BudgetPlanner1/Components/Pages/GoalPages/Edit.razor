@page "/goals/edit"
@rendermode InteractiveServer
@using BudgetPlanner1.Data
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner1.Domain
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Goal</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center mb-4">Edit Goal</h1>
            <hr />

            @if (goal is null)
            {
                <p class="text-center"><em>Loading...</em></p>
            }
            else
            {
                <EditForm Model="goal" OnValidSubmit="UpdateGoal">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />

                    <div class="mb-3">
                        <label class="form-label">Goal Name</label>
                        <InputText @bind-Value="goal.Name" class="form-control" />
                        <ValidationMessage For="() => goal.Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="goal.Description" class="form-control" rows="3" />
                        <ValidationMessage For="() => goal.Description" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Target Amount</label>
                        <InputNumber @bind-Value="goal.TargetAmount" class="form-control" />
                        <ValidationMessage For="() => goal.TargetAmount" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Target Date</label>
                        <InputDate @bind-Value="goal.TargetDate" class="form-control" />
                        <ValidationMessage For="() => goal.TargetDate" />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button type="submit" class="btn btn-primary px-5" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Save Changes
                        </button>
                        <a href="/goals" class="btn btn-outline-secondary px-5">Cancel</a>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private Goal? goal;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        goal = await context.Goals.FirstOrDefaultAsync(g => g.Id == Id);

        if (goal is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task UpdateGoal()
    {
        isSaving = true;
        try
        {
            using var context = DbFactory.CreateDbContext();

            var existingGoal = await context.Goals.FindAsync(goal!.Id);
            if (existingGoal is null)
            {
                NavigationManager.NavigateTo("/notfound");
                return;
            }

            existingGoal.Name = goal.Name;
            existingGoal.Description = goal.Description;
            existingGoal.TargetAmount = goal.TargetAmount;
            existingGoal.TargetDate = goal.TargetDate;
            existingGoal.DateUpdated = DateTime.UtcNow;

            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/goals", forceLoad: true);
        }
        finally
        {
            isSaving = false;
        }
    }
}
