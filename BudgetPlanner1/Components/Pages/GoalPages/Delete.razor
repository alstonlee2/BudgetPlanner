@page "/goals/delete"
@rendermode InteractiveServer
@using BudgetPlanner1.Data
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner1.Domain
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Goal</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center text-danger mb-4">Delete Goal</h1>

            @if (goal is null)
            {
                <p class="text-center"><em>Loading...</em></p>
            }
            else
            {
                <div class="card border-danger mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@goal.Name</h5>
                        <p class="card-text">@goal.Description</p>
                        <p><strong>Target:</strong> @goal.TargetAmount.ToString("C")</p>
                        <p><strong>Deadline:</strong> @goal.TargetDate.ToShortDateString()</p>
                    </div>
                </div>

                <p class="text-center lead text-danger mb-4">
                    Are you sure you want to delete this goal? This action cannot be undone.
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="button"
                            class="btn btn-danger btn-lg px-5"
                            @onclick="DeleteGoal"
                            disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Yes, Delete
                    </button>
                    <a href="/goals" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private Goal? goal;
    private bool isDeleting = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        goal = await context.Goals.FirstOrDefaultAsync(g => g.Id == Id);

        if (goal is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task DeleteGoal()
    {
        if (goal is null) return;

        isDeleting = true;
        try
        {
            using var context = DbFactory.CreateDbContext();
            var existing = await context.Goals.FindAsync(goal.Id);

            if (existing is not null)
            {
                context.Goals.Remove(existing);
                await context.SaveChangesAsync();
            }

            NavigationManager.NavigateTo("/goals", forceLoad: true);
        }
        finally
        {
            isDeleting = false;
        }
    }
}
