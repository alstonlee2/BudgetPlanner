@page "/expenses/delete"
@rendermode InteractiveServer
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner1.Domain
@inject IDbContextFactory<BudgetPlanner1.Data.BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Expense</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-danger mb-4">Delete Expense</h3>

            @if (expense is null)
            {
                <div class="text-center">
                    <div class="spinner-border text-danger" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading expense...</p>
                </div>
            }
            else
            {
                <div class="card border-danger mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Expense Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@expense.Description</dd>

                            <dt class="col-sm-4">Amount:</dt>
                            <dd class="col-sm-8">@expense.Amount.ToString("C")</dd>

                            <dt class="col-sm-4">Expense Date:</dt>
                            <dd class="col-sm-8">@expense.ExpenseDate.ToString("D")</dd>

                            <dt class="col-sm-4">Category ID:</dt>
                            <dd class="col-sm-8">@expense.CategoryId</dd>

                            @if (expense.GoalId.HasValue)
                            {
                                <dt class="col-sm-4">Goal ID:</dt>
                                <dd class="col-sm-8">@expense.GoalId</dd>
                            }

                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@expense.DateCreated.ToString("g") by @expense.CreatedBy</dd>

                            <dt class="col-sm-4">Last Updated:</dt>
                            <dd class="col-sm-8">@expense.DateUpdated.ToString("g") by @expense.UpdatedBy</dd>
                        </dl>
                    </div>
                </div>

                <div class="alert alert-danger text-center py-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this expense? This action cannot be undone.
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <div class="d-grid gap-2 d-md-flex justify-content-center">
                    <button type="button"
                            class="btn btn-danger btn-lg px-5"
                            @onclick="DeleteExpense"
                            disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Yes, Delete Expense
                    </button>
                    <a href="/expenses" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private Expense? expense;
    private string? errorMessage;
    private bool isDeleting = false;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        expense = await context.Expenses.FirstOrDefaultAsync(m => m.Id == Id);

        if (expense is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task DeleteExpense()
    {
        if (expense is null) return;

        isDeleting = true;
        errorMessage = null;

        try
        {
            using var context = DbFactory.CreateDbContext();
            var existingExpense = await context.Expenses.FindAsync(expense.Id);

            if (existingExpense is not null)
            {
                context.Expenses.Remove(existingExpense);
                await context.SaveChangesAsync();
            }

            NavigationManager.NavigateTo("/expenses", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting expense: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            isDeleting = false;
        }
    }
}
