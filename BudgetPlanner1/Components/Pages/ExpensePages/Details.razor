@page "/expenses/details"
@using Microsoft.EntityFrameworkCore
@using BudgetPlanner1.Domain
@inject IDbContextFactory<BudgetPlanner1.Data.BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Expense</h2>
    <hr />
    @if (expense is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ExpenseId</dt>
            <dd class="col-sm-10">@expense.ExpenseId</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@expense.Description</dd>
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@expense.Amount</dd>
            <dt class="col-sm-2">ExpenseDate</dt>
            <dd class="col-sm-10">@expense.ExpenseDate</dd>
            <dt class="col-sm-2">CategoryId</dt>
            <dd class="col-sm-10">@expense.CategoryId</dd>
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@expense.UserId</dd>
            <dt class="col-sm-2">GoalId</dt>
            <dd class="col-sm-10">@expense.GoalId</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@expense.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@expense.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@expense.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@expense.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/expenses/edit?id={expense.Id}")">Edit</a> |
            <a href="@($"/expenses")">Back to List</a>
        </div>
    }
</div>

@code {
    private Expense? expense;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        expense = await context.Expense.FirstOrDefaultAsync(m => m.Id == Id);

        if (expense is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
