@page "/categories/details"
@using BudgetPlanner1.Domain
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BudgetPlanner1.Data.BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Category Details</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Category Details</h2>

            @if (category == null)
            {
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@category.Name</h4>
                        <p class="card-text text-muted">@(category.Description ?? "No description provided")</p>

                        <hr />

                        <dl class="row">
                            <dt class="col-sm-4">Created</dt>
                            <dd class="col-sm-8">@category.DateCreated.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-4">Last Updated</dt>
                            <dd class="col-sm-8">@category.DateUpdated.ToString("dd MMM yyyy")</dd>

                            <dt class="col-sm-4">Created By</dt>
                            <dd class="col-sm-8">@category.CreatedBy</dd>
                        </dl>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="@($"/categories/edit?id={category.Id}")" class="btn btn-primary me-2">Edit</a>
                    <a href="/categories" class="btn btn-outline-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }
    private Category? category;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        category = await context.Categories
            .FirstOrDefaultAsync(c => c.Id == Id);

        if (category == null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }
}