@page "/categories/delete"
@rendermode InteractiveServer
@using BudgetPlanner1.Data
@using BudgetPlanner1.Domain
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Category</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1 class="text-center text-danger mb-4">Delete Category</h1>

            @if (category == null)
            {
                <p class="text-center"><em>Loading...</em></p>
            }
            else
            {
                <div class="card border-danger mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@(category.Description ?? "No description")</p>
                        <p><small class="text-muted">Created: @category.DateCreated.ToShortDateString()</small></p>
                    </div>
                </div>

                <p class="text-center lead text-danger mb-4">
                    Are you sure you want to delete this category?<br />
                    This action cannot be undone.
                </p>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="button"
                            class="btn btn-danger btn-lg px-5"
                            @onclick="DeleteCategory"
                            disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Yes, Delete
                    </button>
                    <a href="/categories" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }

    private Category? category;
    private bool isDeleting = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        category = await context.Categories.FirstOrDefaultAsync(c => c.Id == Id);

        if (category == null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task DeleteCategory()
    {
        if (category == null) return;

        isDeleting = true;
        try
        {
            using var context = DbFactory.CreateDbContext();
            var toDelete = await context.Categories.FindAsync(category.Id);

            if (toDelete != null)
            {
                context.Categories.Remove(toDelete);
                await context.SaveChangesAsync();
            }

            NavigationManager.NavigateTo("/categories", forceLoad: true);
        }
        finally
        {
            isDeleting = false;
        }
    }
}