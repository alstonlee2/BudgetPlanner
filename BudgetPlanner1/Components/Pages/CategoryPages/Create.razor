@page "/categories/create"
@rendermode InteractiveServer
@attribute [Authorize]
@using BudgetPlanner1.Data
@using BudgetPlanner1.Domain
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Create Category</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h3 class="text-center mb-4">Create New Category</h3>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="category" OnValidSubmit="AddCategory">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger mb-3" />

                <div class="mb-3">
                    <label class="form-label">Category Name *</label>
                    <InputText @bind-Value="category.Name" class="form-control" />
                    <ValidationMessage For="() => category.Name" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea @bind-Value="category.Description" class="form-control" rows="3" />
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary px-5" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Create
                    </button>
                    <a href="/categories" class="btn btn-outline-secondary px-5">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Category category = new()
    {
        Name = "",
        Description = ""
    };

    private string? errorMessage;
    private bool isSaving = false;

    private async Task AddCategory()
    {
        errorMessage = null;
        isSaving = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
            var userName = authState.User.Identity?.Name ?? "Unknown";

            if (string.IsNullOrEmpty(userId))
            {
                errorMessage = "User not authenticated.";
                return;
            }

            var now = DateTime.UtcNow;

            category.UserId = userId;
            category.DateCreated = now;
            category.DateUpdated = now;
            category.CreatedBy = userName;
            category.UpdatedBy = userName;

            using var context = DbFactory.CreateDbContext();
            context.Categories.Add(category);
            await context.SaveChangesAsync();

            NavigationManager.NavigateTo("/categories", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating category: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            isSaving = false;
        }
    }
}