@page "/categories/edit"
@rendermode InteractiveServer
@using BudgetPlanner1.Data
@using BudgetPlanner1.Domain
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BudgetPlanner1Context> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Edit Category</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h3 class="text-center mb-4">Edit Category</h3>

            @if (category == null)
            {
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <EditForm Model="category" OnValidSubmit="UpdateCategory">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />

                    <div class="mb-3">
                        <label class="form-label">Category Name *</label>
                        <InputText @bind-Value="category.Name" class="form-control" />
                        <ValidationMessage For="() => category.Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="category.Description" class="form-control" rows="3" />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary px-5" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Save Changes
                        </button>
                        <a href="/categories" class="btn btn-outline-secondary px-5">Cancel</a>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] private int Id { get; set; }

    private Category? category;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        category = await context.Categories
            .FirstOrDefaultAsync(c => c.Id == Id);

        if (category == null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task UpdateCategory()
    {
        if (category == null) return;

        isSaving = true;

        try
        {
            using var context = DbFactory.CreateDbContext();
            var existing = await context.Categories.FindAsync(category.Id);

            if (existing == null)
            {
                NavigationManager.NavigateTo("/notfound");
                return;
            }

            // Only update allowed fields
            existing.Name = category.Name;
            existing.Description = category.Description;
            existing.DateUpdated = DateTime.UtcNow;

            // Optional: update UpdatedBy if you want to track last modifier
            // existing.UpdatedBy = (await AuthStateProvider.GetAuthenticationStateAsync())
            //     .User.Identity?.Name ?? "Unknown";

            await context.SaveChangesAsync();

            NavigationManager.NavigateTo("/categories", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Update error: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }
}